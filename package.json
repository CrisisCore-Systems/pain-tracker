{
  "name": "pain-tracker",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "A comprehensive tool for tracking and managing chronic pain and injuries",
  "author": "CrisisCore-Systems",
  "license": "MIT",
  "homepage": "https://crisiscore-systems.github.io/pain-tracker",
  "repository": {
    "type": "git",
    "url": "https://github.com/CrisisCore-Systems/pain-tracker"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 50",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "husky install",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist --dotfiles true",
    "prebuild": "node scripts/check-env.mjs",
    "proxy:start": "node scripts/api-proxy.mjs",
    "doctor": "node scripts/doctor.js",
    "scan-secrets": "node scripts/scan-secrets.js",
    "check-merge": "node scripts/check-merge-markers.js",
    "check-security": "npm run scan-secrets && node scripts/check-collapse-vectors.js",
    "pre-commit": "node scripts/pre-commit.js",
    "commitlint": "commitlint"
  },
  "dependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-alert-dialog": "^1.0.4",
    "@react-pdf/renderer": "^4.1.6",
    "chart.js": "^4.4.7",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "glob": "^11.0.3",
    "html2canvas": "^1.4.1",
    "http-proxy-middleware": "^3.0.5",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.284.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.15.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.14",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "gh-pages": "^6.3.0",
    "husky": "^8.0.3",
    "jest-axe": "^9.0.0",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.3.0",
    "postcss": "^8.4.27",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.6.0"
  }
}
