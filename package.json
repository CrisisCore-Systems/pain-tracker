{
  "name": "pain-tracker",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "A comprehensive tool for tracking and managing chronic pain and injuries",
  "author": "CrisisCore-Systems",
  "license": "MIT",
  "homepage": "https://crisiscore-systems.github.io/pain-tracker",
  "repository": {
    "type": "git",
    "url": "https://github.com/CrisisCore-Systems/pain-tracker"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 50",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test && npm run test:e2e",
    "validate:e2e": "node scripts/validate-e2e.js",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "husky install",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist --dotfiles true",
    "prebuild": "node scripts/check-env.mjs",
    "proxy:start": "node scripts/api-proxy.mjs",
    "doctor": "node scripts/doctor.js",
    "scan-secrets": "node scripts/scan-secrets.js",
    "check-merge": "node scripts/check-merge-markers.js",
    "check-security": "npm run scan-secrets && node scripts/check-collapse-vectors.js",
    "check-tree-reasoning": "node scripts/tree-thought-analyzer.js",
    "pre-commit": "node scripts/pre-commit.js",
    "commitlint": "commitlint",
    "audit-security": "node scripts/security-audit.js",
    "update-deps": "node scripts/update-dependencies.js"
  },
  "dependencies": {
    "@commitlint/cli": "^6.1.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-alert-dialog": "^1.0.4",
    "@react-pdf/renderer": "^1.6.17",
    "@types/crypto-js": "^4.2.2",
    "chart.js": "^4.4.7",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "date-fns": "^2.30.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "glob": "^10.3.7",
    "html2canvas": "^1.4.1",
    "http-proxy-middleware": "^3.0.5",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.284.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.7.3",
    "recharts": "^2.15.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.3.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.14",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^5.2.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "gh-pages": "^6.3.0",
    "husky": "^8.0.3",
    "jest-axe": "^3.1.1",
    "jsdom": "^23.0.1",
    "lint-staged": "^13.1.3",
    "playwright": "^1.55.0",
    "postcss": "^8.4.27",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.7.2",
    "vite": "^7.1.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
