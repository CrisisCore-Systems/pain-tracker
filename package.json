{
  "name": "pain-tracker",
  "private": true,
  "version": "1.0.16",
  "type": "module",
  "description": "A comprehensive tool for tracking and managing chronic pain and injuries",
  "author": "CrisisCore-Systems",
  "license": "MIT",
  "homepage": "https://paintracker.ca",
  "repository": {
    "type": "git",
    "url": "https://github.com/CrisisCore-Systems/pain-tracker"
  },
  "scripts": {
    "dev": "vite",
    "dev:api": "tsx scripts/api-dev-server.js",
    "dev:api:test": "tsx scripts/api-dev-server.js --test",
    "dev:webhook": "node scripts/webhook-dev-server.js",
    "dev:full": "concurrently --names \"VITE,WEBHOOK\" --prefix-colors \"cyan,magenta\" \"npm run dev\" \"npm run dev:webhook\"",
    "build": "vite build",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 1000",
    "preview": "vite preview",
    "pretest": "node -e \"const fs=require('fs'); const path=require('path'); fs.mkdirSync(path.join(process.cwd(),'coverage','.tmp'),{recursive:true});\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck:watch": "node ./node_modules/typescript/bin/tsc --noEmit --watch",
    "typecheck:ci": "node ./node_modules/typescript/bin/tsc --noEmit",
    "tsc-build": "node ./node_modules/typescript/bin/tsc -b",
    "build:packages": "node ./node_modules/typescript/bin/tsc -b packages/design-system packages/services packages/utils",
    "pretypecheck": "npm run build:packages",
    "typecheck:memory:ps": "powershell -Command \"$env:NODE_OPTIONS='--max-old-space-size=4096'; npm run typecheck\"",
    "test:ui": "vitest --ui",
    "db:reset": "node scripts/db/reset.cjs",
    "db:migrate": "node scripts/db/migrate.cjs",
    "db:seed": "node scripts/db/seed.cjs",
    "db:setup-clinic-auth": "node scripts/setup-clinic-auth.js",
    "db:migrate:prod": "node scripts/db/apply-schema-prod.js",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=json --reporter=default",
    "sbom": "cyclonedx-npm --output-file security/sbom-latest.json --json",
    "docs:validate": "node scripts/validate-docs.js",
    "diagrams:svg-to-png": "node scripts/svg-to-png.mjs",
    "badge:tests": "node scripts/generate-test-badge.mjs",
    "badge:loc": "node scripts/generate-loc-badge.mjs",
    "badge:bundle": "vite build --emptyOutDir=false && node scripts/generate-bundle-badge.mjs",
    "badge:mutation": "node scripts/generate-mutation-badge.mjs",
    "badge:all": "vitest run --coverage --reporter=json --reporter=default && node scripts/generate-test-badge.mjs && node scripts/generate-coverage-badge.mjs && node scripts/generate-security-badge.mjs && node scripts/generate-loc-badge.mjs && node scripts/generate-bundle-badge.mjs && node scripts/generate-mutation-badge.mjs",
    "typecheck": "node ./node_modules/typescript/bin/tsc --noEmit --incremental",
    "check": "node -e \"console.log('→ typecheck (may take ~1 min; silent until done)')\" && npm run -s typecheck:ci && node -e \"console.log('→ lint')\" && npm run -s lint && node -e \"console.log('→ test')\" && npm run -s test:ci && node -e \"console.log('→ build')\" && npm run -s build",
    "check:quick": "node -e \"console.log('→ typecheck (may take ~1 min; silent until done)')\" && npm run -s typecheck:ci && node -e \"console.log('→ lint')\" && npm run -s lint && node -e \"console.log('→ test')\" && npm run -s test:ci",
    "pretypecheck:ci": "npm run build:packages",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "node -e \"if (!process.env.CI && !process.env.VERCEL) { try { require('child_process').execSync('husky install', {stdio: 'inherit'}) } catch (e) {} }\"",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist --dotfiles",
    "prebuild": "node scripts/check-env.mjs",
    "proxy:start": "node scripts/api-proxy.mjs",
    "doctor": "node scripts/doctor.js",
    "scan-secrets": "node scripts/scan-secrets.js",
    "check-merge": "node scripts/check-merge-markers.js",
    "check-security": "npm run scan-secrets && node scripts/check-collapse-vectors.js",
    "security-test": "tsx scripts/automated-security-testing.ts",
    "security-audit": "node scripts/security-audit.js",
    "security-full": "npm run security-test && npm run security-audit",
    "check-tree-reasoning": "node scripts/tree-thought-analyzer.js",
    "pre-commit": "node scripts/pre-commit.js",
    "commitlint": "commitlint",
    "audit-security": "node scripts/security-audit.js",
    "update-deps": "node scripts/update-dependencies.js",
    "deploy:status": "node scripts/deploy.js status",
    "deploy:staging": "node scripts/deploy.js deploy staging",
    "deploy:production": "node scripts/deploy.js deploy production",
    "deploy:rollback": "node scripts/deploy.js rollback",
    "deploy:healthcheck": "node scripts/deploy.js healthcheck",
    "deploy:logs": "node scripts/deploy.js logs",
    "deploy:validate": "node scripts/deploy.js validate",
    "deploy:precheck": "node scripts/pre-deployment-validation.js",
    "deploy:prod": "node scripts/deploy-production.js",
    "deploy:prod:quick": "node scripts/deploy-production.js --skip-tests",
    "deploy:setup-env": "node scripts/setup-vercel-env.js",
    "release:patch": "node scripts/deploy.js release patch",
    "release:minor": "node scripts/deploy.js release minor",
    "release:major": "node scripts/deploy.js release major",
    "healthcheck": "node scripts/health-check.js",
    "mutate": "stryker run",
    "playwright:install": "npx playwright install",
    "screenshots:capture": "node scripts/capture-screenshots.js",
    "screenshots:portfolio": "node scripts/capture-screenshot-portfolio.js",
    "screenshots:portfolio:phase1": "node scripts/capture-screenshot-portfolio.js --phase=phase1",
    "screenshots:portfolio:phase2": "node scripts/capture-screenshot-portfolio.js --phase=phase2",
    "screenshots:portfolio:phase3": "node scripts/capture-screenshot-portfolio.js --phase=phase3",
    "screenshots:accessibility": "node scripts/capture-accessibility-screenshots.js",
    "screenshots:accessibility:text": "node scripts/capture-accessibility-screenshots.js --category=text-size",
    "screenshots:accessibility:contrast": "node scripts/capture-accessibility-screenshots.js --category=contrast",
    "screenshots:accessibility:navigation": "node scripts/capture-accessibility-screenshots.js --category=navigation",
    "screenshots:accessibility:cognitive": "node scripts/capture-accessibility-screenshots.js --category=cognitive-support",
    "e2e": "npx playwright test --config=e2e/playwright.config.ts",
    "e2e:debug": "npx playwright test --config=e2e/playwright.config.ts --debug",
    "e2e:pwa": "npx playwright test e2e/tests/pwa-*.spec.ts --config=e2e/playwright.config.ts",
    "e2e:pwa:chromium": "npx playwright test e2e/tests/pwa-*.spec.ts --project=chromium --config=e2e/playwright.config.ts",
    "e2e:pwa:firefox": "npx playwright test e2e/tests/pwa-*.spec.ts --project=firefox --config=e2e/playwright.config.ts",
    "e2e:pwa:webkit": "npx playwright test e2e/tests/pwa-*.spec.ts --project=webkit --config=e2e/playwright.config.ts",
    "e2e:screenshots": "npx playwright test e2e/tests/screenshots.spec.ts --project=chromium --config=e2e/playwright.config.ts",
    "e2e:screenshots:mobile": "npx playwright test e2e/tests/screenshots.spec.ts --project=mobile-chrome --config=e2e/playwright.config.ts",
    "e2e:pwa:report": "node scripts/run-pwa-tests.js",
    "accessibility:scan": "npx playwright test e2e/accessibility.spec.ts --project=chromium --config=e2e/playwright.config.ts",
    "bootstrap-windows": "powershell -File ./scripts/bootstrap-windows.ps1",
    "wcb:sample-pdf": "tsx scripts/generate-wcb-sample-pdf.ts",
    "devto:dry-run": "node scripts/devto/devto.mjs dry-run",
    "devto:create-drafts": "node scripts/devto/devto.mjs create-drafts --write",
    "devto:publish-due": "node scripts/devto/devto.mjs publish-due --yes",
    "devto:auth-check": "node scripts/devto/devto.mjs auth-check",
    "devto:sync-schedule": "node scripts/devto/devto.mjs sync-schedule",
    "devto:sync-schedule:apply": "node scripts/devto/devto.mjs sync-schedule --yes --write",
    "devto:sync-titles": "node scripts/devto/devto.mjs sync-titles",
    "devto:sync-titles:apply": "node scripts/devto/devto.mjs sync-titles --yes --write",
    "devto:sync-titles:apply:allow-published": "node scripts/devto/devto.mjs sync-titles --yes --write --allow-published",
    "devto:sync-content": "node scripts/devto/devto.mjs sync-content",
    "devto:sync-content:apply": "node scripts/devto/devto.mjs sync-content --yes --write",
    "devto:sync-content:apply:allow-published": "node scripts/devto/devto.mjs sync-content --yes --write --allow-published",
    "devto:retrofit-published": "node scripts/devto/devto.mjs retrofit-published",
    "devto:retrofit-published:apply": "node scripts/devto/devto.mjs retrofit-published --yes",
    "devto:publish-start-here": "node scripts/devto/devto.mjs publish-start-here --write-md",
    "devto:publish-start-here:apply": "node scripts/devto/devto.mjs publish-start-here --yes --write --write-md"
  },
  "dependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.2",
