{
  "name": "pain-tracker",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "A comprehensive tool for tracking and managing chronic pain and injuries",
  "author": "CrisisCore-Systems",
  "license": "MIT",
  "homepage": "https://crisiscore-systems.github.io/pain-tracker",
  "repository": {
    "type": "git",
    "url": "https://github.com/CrisisCore-Systems/pain-tracker"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 500",
    "preview": "vite preview",
    "test": "vitest",
    "typecheck:watch": "tsc --noEmit --watch",
    "typecheck:ci": "tsc --noEmit",
    "tsc-build": "tsc -b",
    "build:packages": "tsc -b packages/design-system packages/services",
    "typecheck:memory:ps": "powershell -Command \"$env:NODE_OPTIONS='--max-old-space-size=4096'; npm run typecheck\"",
    "test:ui": "vitest --ui",
    "db:reset": "node scripts/db/reset.cjs",
    "db:migrate": "node scripts/db/migrate.cjs",
    "db:seed": "node scripts/db/seed.cjs",
    "test:coverage": "vitest run --coverage",
    "sbom": "cyclonedx-npm --output-file security/sbom-latest.json --json",
    "docs:validate": "node scripts/validate-docs.js",
    "badge:tests": "node scripts/generate-test-badge.mjs",
    "badge:loc": "node scripts/generate-loc-badge.mjs",
    "badge:bundle": "vite build --emptyOutDir=false && node scripts/generate-bundle-badge.mjs",
    "badge:mutation": "node scripts/generate-mutation-badge.mjs",
    "badge:all": "vitest run --coverage --reporter=json --reporter=default && node scripts/generate-test-badge.mjs && node scripts/generate-coverage-badge.mjs && node scripts/generate-security-badge.mjs && node scripts/generate-loc-badge.mjs && node scripts/generate-bundle-badge.mjs && node scripts/generate-mutation-badge.mjs",
    "typecheck": "tsc --noEmit --incremental",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "husky install",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist --dotfiles",
    "prebuild": "node scripts/check-env.mjs",
    "proxy:start": "node scripts/api-proxy.mjs",
    "doctor": "node scripts/doctor.js",
    "scan-secrets": "node scripts/scan-secrets.js",
    "check-merge": "node scripts/check-merge-markers.js",
    "check-security": "npm run scan-secrets && node scripts/check-collapse-vectors.js",
    "security-test": "tsx scripts/automated-security-testing.ts",
    "security-audit": "node scripts/security-audit.js",
    "security-full": "npm run security-test && npm run security-audit",
    "check-tree-reasoning": "node scripts/tree-thought-analyzer.js",
    "pre-commit": "node scripts/pre-commit.js",
    "commitlint": "commitlint",
    "audit-security": "node scripts/security-audit.js",
    "update-deps": "node scripts/update-dependencies.js",
    "deploy:status": "node scripts/deploy.js status",
    "deploy:staging": "node scripts/deploy.js deploy staging",
    "deploy:production": "node scripts/deploy.js deploy production",
    "deploy:rollback": "node scripts/deploy.js rollback",
    "deploy:healthcheck": "node scripts/deploy.js healthcheck",
    "deploy:logs": "node scripts/deploy.js logs",
    "deploy:validate": "node scripts/deploy.js validate",
    "release:patch": "node scripts/deploy.js release patch",
    "release:minor": "node scripts/deploy.js release minor",
    "release:major": "node scripts/deploy.js release major",
    "healthcheck": "node scripts/health-check.js",
    "mutate": "stryker run",
    "playwright:install": "npx playwright install",
    "e2e": "npx playwright test --config=e2e/playwright.config.ts",
    "e2e:debug": "npx playwright test --config=e2e/playwright.config.ts --debug",
    "accessibility:scan": "npx playwright test e2e/accessibility.spec.ts --project=chromium",
    "bootstrap-windows": "powershell -File ./scripts/bootstrap-windows.ps1"
  },
  "dependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-alert-dialog": "^1.0.4",
    "@react-pdf/renderer": "^4.3.0",
    "@types/crypto-js": "^4.2.2",
    "chart.js": "^4.4.7",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "focus-trap-react": "^9.0.2",
    "glob": "^11.0.3",
    "html2canvas": "^1.4.1",
    "http-proxy-middleware": "^3.0.5",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "immer": "^10.1.3",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.544.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.63.0",
    "react-i18next": "^15.7.3",
    "react-is": "^19.1.1",
    "recharts": "^3.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.7",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.43.0",
    "@stryker-mutator/core": "^9.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest-axe": "^3.5.9",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^24.3.1",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.14",
    "canvas": "^3.2.0",
    "eslint": "^9.35.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "postcss": "^8.4.27",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^7.1.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "^20.0.0 || >=20",
    "npm": ">=9"
  },
  "playwright": {
    "install": true
  }
}
