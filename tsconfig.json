{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
    "module": "ESNext",
    "skipLibCheck": true,
  "incremental": true,
    "moduleResolution": "bundler",
    
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
  "allowImportingTsExtensions": true,
  "strict": true,
  "noUnusedLocals": false,
  "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
  "allowJs": true,
  "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "vitest/globals", "node"],
    "baseUrl": ".",
    "paths": {
      "@pain-tracker/services": ["packages/services/src/index.ts"],
      "@pain-tracker/services/*": ["packages/services/src/*"],
      "@pain-tracker/types": ["src/types.ts"],
      "@pain-tracker/design-system": ["packages/design-system/src/index.ts"],
      "@pain-tracker/design-system/*": ["packages/design-system/src/*"],
      "@pain-tracker/utils": ["packages/utils/src/index.ts"],
      "@pain-tracker/utils/*": ["packages/utils/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", ".vite", "coverage", "public"],
  "references": [
    { "path": "./packages/design-system/tsconfig.json" },
  { "path": "./packages/services/tsconfig.json" },
  { "path": "./packages/utils/tsconfig.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
