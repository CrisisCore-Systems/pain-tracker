# Frontend vars only (VITE_ prefix exposes to client)
VITE_WCB_API_ENDPOINT=/api/wcb
VITE_APP_ENVIRONMENT=development
VITE_SENTRY_DSN=

# Enable validation technology integration (emotional validation, progress tracking)
# Set to 'true' to enable, 'false' to disable
VITE_REACT_APP_ENABLE_VALIDATION=true

# Backend secrets (never VITE_ prefixed)
WCB_API_KEY=backend_only_secret

# ============================================
# SaaS Subscription (Stripe Integration)
# ============================================

# Stripe API Keys
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Webhook Secret
# Get from: stripe listen --forward-to localhost:3000/api/stripe/webhook
# Or from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs
# Create products/prices at: https://dashboard.stripe.com/test/products
# Basic Tier ($9.99/month, $99.90/year)
STRIPE_PRICE_BASIC_MONTHLY=price_basic_monthly_id_here
STRIPE_PRICE_BASIC_YEARLY=price_basic_yearly_id_here

# Pro Tier ($24.99/month, $249.90/year)
STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly_id_here
STRIPE_PRICE_PRO_YEARLY=price_pro_yearly_id_here

# Database (for subscription storage)
# For development: Use SQLite or local PostgreSQL
# For production: Use managed PostgreSQL (Vercel Postgres, Supabase, etc.)
DATABASE_URL=postgresql://user:password@localhost:5432/paintracker

# ============================================
# Optional: Email Service (for notifications)
# ============================================
# SendGrid API Key (for trial/payment emails)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@paintracker.ca

# ============================================
# Optional: DEV.to (Forem) publishing
# ============================================

# Generate in DEV settings
DEVTO_API_KEY=

# Optional overrides used by scripts/devto/devto.mjs
DEVTO_SPONSOR_URL=https://paintracker.ca/sponser
DEVTO_REPO_URL=https://github.com/CrisisCore-Systems/pain-tracker
DEVTO_SERIES_START_URL=
DEVTO_SERIES=
DEVTO_ORGANIZATION_ID=

