# Pain Tracker - Nginx Configuration
# Place at: /etc/nginx/sites-available/pain-tracker
# Then symlink: ln -s /etc/nginx/sites-available/pain-tracker /etc/nginx/sites-enabled/

server {
    listen 80;
    listen [::]:80;
    server_name your.domain.example;  # REPLACE with your actual domain

    # ACME challenge location for certbot (Let's Encrypt)
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    # Redirect all HTTP to HTTPS (uncomment after certbot runs successfully)
    # return 301 https://$server_name$request_uri;
}

