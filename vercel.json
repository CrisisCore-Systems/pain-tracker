{
  "version": 2,
  "buildCommand": "npx tsc -b packages/design-system packages/services packages/utils && npm run build",
  "installCommand": "npm install --include=dev",
  "framework": null,
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/pain-tracker/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "functions": {
    "api/stripe/**/*.ts": {
      "runtime": "@vercel/node@3.2.18"
    },
    "api/health/**/*.ts": {
      "runtime": "@vercel/node@3.2.18"
    }
  }
}
