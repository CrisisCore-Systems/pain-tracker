{
  "version": 2,
  "buildCommand": "export VITE_BUILD_HASH=$(git rev-parse --short HEAD) && npx tsc -b packages/design-system packages/services packages/utils && npm run build",
  "installCommand": "npm install --include=dev",
  "framework": null,
  "outputDirectory": "dist",
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "paintracker.ca"
        }
      ],
      "destination": "https://www.paintracker.ca/$1",
      "permanent": true
    },
    {
      "source": "/sponser",
      "destination": "https://github.com/sponsors/CrisisCore-Systems",
      "permanent": true
    },
    {
      "source": "/sponsor",
      "destination": "https://github.com/sponsors/CrisisCore-Systems",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/pain-tracker/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "functions": {
    "api/stripe/**/*.ts": {
      "runtime": "@vercel/node@3.2.18"
    },
    "api/health/**/*.ts": {
      "runtime": "@vercel/node@3.2.18"
    }
  }
}
